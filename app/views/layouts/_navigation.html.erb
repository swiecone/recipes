<header class="navbar navbar-fixed-top navbar-default">
		<div class="container">
			<%= link_to "My Recipes", home_path, class: "btn btn-lg btn-success", id: "logo" %>
			<ul class="nav-ul-item">

					<li class="dropdown" >
							<%= link_to '#', class: "btn btn-default btn-info dropdown-toggle", "data-toggle" => "dropdown" do %>
							  <span class="glyphicon glyphicon-fire" aria-hidden="true"></span> 
							   Styles 
							  <b class="caret"></b>
								<% end %>
						<ul class='dropdown-menu'>
							<% Style.all.each do |style| %>
								<li><%= link_to style.name, style_path(style) %></li>
								<% end %>

								<% if logged_in? %>
									<li class='divider'></li>
									<li>
										<%= link_to(new_style_path) do %>
										<span class="glyphicon glyphicon-cutlery" aria-hidden="true"></span> 
										New Style
										<% end %>
									</li>
							<% end %>
							
						</ul>	
					</li>
				
			</ul>

			<ul class="nav-ul-item"> 
						<li class="dropdown">
							<%= link_to '#', class: "btn btn-default btn-info dropdown-toggle", "data-toggle" => "dropdown" do %>
							  <span class="glyphicon glyphicon-leaf" aria-hidden="true"></span> 
							   Ingredients 
							  <b class="caret"></b>
							<% end %>
						<ul class='dropdown-menu'>
							<% Ingredient.all.each do |ingredient| %>
								<li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
								<% end %>

								<% if logged_in? %>
									<li class='divider'></li>
									<li>
										<%= link_to(new_ingredient_path) do %>
										<span class="glyphicon glyphicon-grain" aria-hidden="true"></span> 
										New Ingredient
										<% end %>
									</li>
							<% end %>

						</ul>	
					</li>
			</ul>
			<% if logged_in? %>
				<ul class="nav-ul-item"> 
						<li class="dropdown">
					<%= link_to " New Recipe", new_recipe_path , class: "btn btn-default btn-warning glyphicon glyphicon-plus"  %> 
						</li>
							  
				</ul>

				<div class="nav-item navbar-right">
					<ul>
						<li class="dropdown">
							<%= link_to '#', class: "btn btn-default btn-danger dropdown-toggle", "data-toggle" => "dropdown" do %>
							  <span class="glyphicon glyphicon-user" aria-hidden="true"></span> 

							  <%= current_user.chefname %>   <b class="caret"></b>
						<% end %>
						<ul class='dropdown-menu'>
							<li><%= link_to "View Profile", chef_path(current_user) %></li>
							<li><%= link_to "Edit Profile", edit_chef_path(current_user) %></li>
							<li class="divider"></li>
							<li><%= link_to "Logout", logout_path %></li>

						</li>
				</ul>
			</div>
			<% else %>
				<div class="nav-item navbar-center"> 
						<%= link_to "Log In", login_path, class: "btn btn-default btn small" %> 

				</div>
			<% end %>
		</div>
</header>